@page
@model LoginModel

@{
    Layout = "_ValidationScriptsPartial";
    ViewData["Title"] = "Sign In";
}    
<div class="login-container login">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Email and Username -->
        <div class="form-floating mb-3">
            <input asp-for="Input.UsernameOrEmail" class="form-control" aria-required="true" placeholder="Username or Email" />
            <label asp-for="Input.UsernameOrEmail" class="form-label"></label>
            <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" id="floatingPassword" autocomplete="current-password" aria-required="true" placeholder="Password" />
            <label asp-for="Input.Password" class="form-label"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- RememberMe -->
        <div class="checkbox mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe" class="form-label">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <button id="login-submit" type="submit" class="btn btn-info">SIGN IN</button>
        </div>

        <!-- ForgotPassword -->
        <div class="forgetpassword">
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </div>
    </form>

    <!-- OR -->
    <div class="or-container">
        <div class="line"></div>
        <span class="or-text">OR</span>
        <div class="line"></div>
    </div>

    <!-- Another service to register -->
    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <div class="socialmedia">
            <p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                        <button type="submit" name="provider" value="@provider.Name" title="@provider.DisplayName">
                            <img src="~/images/@provider.Name-brands-solid.svg" />
                        </button>
                }
            </p>
        </div>
    </form>
</div>

<!-- Footer -->
<div class="footer">
    <p>Not Registered? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
</div>


